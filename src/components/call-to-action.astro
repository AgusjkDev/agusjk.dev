---
import type { HTMLAttributes } from "astro/types";

import { cn } from "@/lib/utils";

type Props<T extends "button" | "a"> = {
    as?: T;
} & HTMLAttributes<T>;

const { as: As = "button", class: className, ...props } = Astro.props;
---

<As
    class={cn(
        "animate-background-shine rounded-full border border-border bg-[linear-gradient(110deg,transparent,45%,rgb(var(--primary)),55%,transparent)] bg-[length:200%_100%] px-4 py-2 text-sm font-medium transition-colors duration-300 hover:border-primary",
        className,
    )}
    {...props}
>
    <slot />
</As>
